<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_mainmenu"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_screen_name"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/ys_regular"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:paddingBottom="28dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"


            android:fontFamily="@font/ys_regular"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/Search_text_mainmenu"
            android:textAllCaps="false"
            android:textColor="@color/black"

            android:backgroundTint="@color/white"

            android:textSize="22sp"

            app:cornerRadius="16dp"

            app:icon="@drawable/magnifying_glass_icon"

            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/black"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"


            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_regular"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/Media_text_mainmenu"
            android:textAllCaps="false"

            android:textColor="@color/black"

            android:textSize="22sp"

            app:cornerRadius="16dp"

            app:icon="@drawable/music_icon"


            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/black"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"


            android:backgroundTint="@color/white"
            android:fontFamily="@font/ys_regular"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/Settings_text_mainmenu"
            android:textAllCaps="false"

            android:textColor="@color/black"

            android:textSize="22sp"

            app:cornerRadius="16dp"

            app:icon="@drawable/gear_icon"

            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/black"/>
    </LinearLayout>

</LinearLayout>

