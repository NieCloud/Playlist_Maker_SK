<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

            />

        <TextView
            style="@style/HeaderStyle"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="86dp"
            android:paddingBottom="12dp"
            android:text="@string/Settings_text_mainmenu"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout style="@style/SettingsMenuViewStyle">

        <TextView
            style="@style/SettingsMenuTextStyle"
            android:text="@string/darkThemeSettingsName" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp" />

    </LinearLayout>

    <FrameLayout style="@style/SettingsMenuViewStyle">

        <TextView
            style="@style/SettingsMenuTextStyle"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:text="@string/SettingsShareMenuText" />

        <ImageView
            android:id="@+id/imageView2"
            style="@style/ImageViewSettingsMenuStyle"
            android:src="@drawable/share_icon" />
    </FrameLayout>

    <FrameLayout style="@style/SettingsMenuViewStyle">

        <TextView
            style="@style/SettingsMenuTextStyle"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:text="@string/callcenter_text_settingsMenu" />

        <ImageView
            android:id="@+id/imageView3"
            style="@style/ImageViewSettingsMenuStyle"
            android:src="@drawable/callcenter_icon" />
    </FrameLayout>

    <FrameLayout style="@style/SettingsMenuViewStyle">

        <TextView
            style="@style/SettingsMenuTextStyle"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:text="@string/User_agreement" />

        <ImageView
            android:id="@+id/imageView4"
            style="@style/ImageViewSettingsMenuStyle"
            android:src="@drawable/arrow_icon" />
    </FrameLayout>

</LinearLayout>
