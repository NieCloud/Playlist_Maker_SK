<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_regular</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name = "HeaderStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:fontFamily">@font/ys_regular</item>


    </style>

    <style name = "SettingsMenuTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">300sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/ys_regular</item>

    </style>

    <style name="SettingsMenuViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="ImageViewSettingsMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name = "HeaderLayout_custom">

        <item name ="android:layout_width">match_parent</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:padding">4dp</item>


    </style>


</resources>